{% extends 'base.html.twig' %}

{% block title %}Hello PdfController!{% endblock %}

{% block content %}

                     <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <div class="row">
                    
                    <div class="col-md-6">
                        <h4 class="c-grey-900 mB-20">Liste des re√ßus</h4>
                        <input type="text" id="search-input" placeholder="Search">
                    </div>
                    <div class="col-md-6 text-right">
                       <a href="{{ path("create_pdf")}}" class="btn btn-primary btn-icon-split btn-lg">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-flag"></i>
                                        </span>
                                        <span class="text">Archiver un dossier</span>
                                    </a>
                    
                </div>
                <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Titre</th>
                        <th>description</th>
                        <th>Client</th>
                        
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                      <th>Titre</th>
                        <th>description</th>
                        <th>Client</th>
                    </tr>
                    </tfoot>
                    <tbody id="table-id">
                    {% for pdf in pdfs %}
                        <tr>
                            <td>{{ pdf.title }}</td> 
                            <td>{{ pdf.description }}</td>
                            
                            <td>{{ pdf.client.nom }} {{ pdf.client.prenom }}</td>
                            
                            
                            
                           
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

                        <script>
                    document.getElementById("search-input").addEventListener("keyup", function() {
                        let input = this.value.toLowerCase();
                        let rows = document.getElementById("table-id").getElementsByTagName("tr");

                        for (let i = 0; i < rows.length; i++) {
                            let cells = rows[i].getElementsByTagName("td");
                            let found = false;

                            for (let j = 0; j < cells.length; j++) {
                                if (cells[j].innerHTML.toLowerCase().indexOf(input) > -1) {
                                    found = true;
                                }
                            }

                            if (found) {
                                rows[i].style.display = "";
                            } else {
                                rows[i].style.display = "none";
                            }
                        }
                    });
</script>      
{% endblock %}
